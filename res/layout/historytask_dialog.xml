<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_relativeDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayoutDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/black" >

        <ImageButton
            android:id="@+id/imageButtonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_back" />

        <ImageButton
            android:id="@+id/imageButtonImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_view_image" />

       <!--  <ImageButton
            android:id="@+id/imageButtonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_save" /> -->

        <Button
            android:id="@+id/imageButtonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#ff888888"
            android:text="@string/save" />

        <TextView
            android:id="@+id/officer_TaskDetail_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:text="@string/claim_officer_title"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayoutDialog"
        android:background="#800000"
        android:fillViewport="true" >

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/history_id_title_dialog"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/id_title_dialog"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_id_title2_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/doubleDot"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_id_dialog"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dip"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/history_filename_title_dialog"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/filename_title_dialog"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_filename_title2_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/doubleDot"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_filename_dialog"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dip"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/history_address_title_dialog"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/address_title_dialog"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_address_title2_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/doubleDot"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_address_dialog"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dip"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/history_gps_title_dialog"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/gps_title_dialog"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_gps_title2_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/doubleDot"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_gps_dialog"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dip"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/history_datereport_title_dialog"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/datereport_title_dialog"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_datereport_title2_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/doubleDot"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_datereport_dialog"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dip"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/history_reportby_title_dialog"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/claim_reportby_title_dialog"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_reportby_title2_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/doubleDot"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_reportby_dialog"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dip"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/history_status_title_dialog"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/claim_status_title_dialog"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_status_title2_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/doubleDot"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radDecision"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textSize="12sp" >

                    <RadioButton
                        android:id="@+id/radBtnViewed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rad_viewed" />

                    <RadioButton
                        android:id="@+id/radBtnInProcess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rad_inProcess" />

                    <RadioButton
                        android:id="@+id/radBtnResolved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rad_resolved" />
                    
                    <RadioButton
                        android:id="@+id/radBtnDuplicate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rad_duplicate" />

                    <RadioButton
                        android:id="@+id/radBtnRejected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rad_rejected" />
                    
                    <RadioButton
                        android:id="@+id/radBtnNone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rad_none"
                        android:visibility="gone"/>
                </RadioGroup>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dip"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/history_uploaded_title_dialog"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/uploaded_title_dialog"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_uploaded_title2_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/doubleDot"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_uploaded_dialog"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:padding="5dip"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dip"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/history_commentofficer_title_dialog"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/commentofficer_title_dialog"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_commentofficer_title2_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/doubleDot"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/history_commentOfficer_dialog"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#ffffffff"
                    android:ems="10"
                    android:maxLength="300"
                    android:padding="5dip"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dip"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/history_nameofficer_title_dialog"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/nameofficer_title_dialog"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_nameofficer_title2_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="@string/doubleDot"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_nameofficer_dialog"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textSize="12sp" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</RelativeLayout>